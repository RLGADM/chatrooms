{
  "name": "kensho-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace frontend\" \"npm run dev --workspace backend\"",
    "vite": "npm run dev --workspace frontend",
    "server:dev": "npm run dev --workspace backend",
    "build": "npm run build --workspace frontend",
    "format": "npm run format --workspace frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
